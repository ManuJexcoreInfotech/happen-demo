<?xml version='1.0' encoding='utf-8'?>
<widget id="hu.dpal.starter" version="0.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Happen Demo</name>
    <description>
        Sample PhoneGap / Cordova application built with Angular and Ionic Framework, uses RequireJS for loading scripts. Example controllers, filters, services, directives and config.
    </description>
    <author email="web_dev_2@shubantechnologies.com" href="http://pr.veba.co/~shubantech/happenstance/">
        Domonkos Pal
    </author>
    <content src="index.html" />
	<allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
	<access origin="*" />
	
    
	<icon src="res/icon/ios/app-icon-72.png" /> 
