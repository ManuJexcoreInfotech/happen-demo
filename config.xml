<?xml version='1.0' encoding='utf-8'?>
<widget id="hu.dpal.starter" version="0.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Happen Demo</name>
    <description>
        Sample PhoneGap / Cordova application built with Angular and Ionic Framework, uses RequireJS for loading scripts. Example controllers, filters, services, directives and config.
    </description>
    <author email="" href="http://dpal.hu">
        Domonkos Pal
    </author>
    <content src="index.html" />
    <icon src="www/res/icon/app-icon-72.png" /> 
	
	
    <!-- iPhone 6 / 6+ -->
    <icon src="www/res/icon/app-icon-180.png" platform="ios" width="180" height="180" />

    <!-- iPhone / iPod Touch  -->
    <icon src="www/res/icon/app-icon-60.png" platform="ios" width="60" height="60" />
    <icon src="www/res/icon/app-icon-120.png" platform="ios" width="120" height="120" />

    <!-- iPad -->
    <icon src="www/res/icon/app-icon-76.png" platform="ios" width="76" height="76" />
    <icon src="www/res/icon/app-icon-152.png" platform="ios" width="152" height="152" />

    <!-- Settings Icon -->
    <icon src="www/res/icon/app-icon-29.png" platform="ios" width="29" height="29" />
    <icon src="www/res/icon/app-icon-58.png" platform="ios" width="58" height="58" />

    <!-- Spotlight Icon -->
    <icon src="www/res/icon/app-icon-40.png" platform="ios" width="40" height="40" />
    <icon src="www/res/icon/app-icon-80.png" platform="ios" width="80" height="80" />


    <!-- iPhone / iPod Touch -->
    <icon src="www/res/icon/app-icon-57.png" platform="ios" width="57" height="57" />
    <icon src="www/res/icon/app-icon-114.png" platform="ios" width="114" height="114" />

    <!-- iPad -->
    <icon src="www/res/icon/app-icon-72.png" platform="ios" width="72" height="72" />
    <icon src="www/res/icon/app-icon-144.png" platform="ios" width="144" height="144" />


    <!-- iPad Spotlight and Settings Icon -->
    <icon src="www/res/icon/app-icon-50.png" platform="ios" width="50" height="50" />
    <icon src="www/res/icon/app-icon-100.png" platform="ios" width="100" height="100" />
    
    <splash src="www/res/splash/splash-screen-640X960.png" />
 
    <splash src="www/res/splash/splash-screen-2048X1536.png" platform="android" qualifier="ldpi" />
    <splash src="www/res/splash/splash-screen-640X960.png" platform="android" qualifier="mdpi" />
    <splash src="www/res/splash/splash-screen-640X960.png" platform="android" qualifier="hdpi" />
    <splash src="www/res/splash/splash-screen-640X960.png" platform="android" qualifier="xhdpi" />

    <!-- iPhone and iPod touch -->
    <splash src="www/res/splash/splash-screen-320X480.png" platform="ios" width="320" height="480" />
    <splash src="www/res/splash/splash-screen-640X960.png" platform="ios" width="640" height="960" />

    <!-- iPhone 5 / iPod Touch (5th Generation) -->
    <splash src="www/res/splash/splash-screen-640X1136.png" platform="ios" width="640" height="1136" />

    <!-- iPhone 6 -->
    <splash src="www/res/splash/splash-screen-750X1334.png" platform="ios" width="750" height="1334" />
    <splash src="www/res/splash/splash-screen-1242X2208.png" platform="ios" width="1242" height="2208" />

    <!-- iPad -->
    <splash src="www/res/splash/splash-screen-768X1024.png" platform="ios" width="768" height="1024" />
    <splash src="www/res/splash/splash-screen-1024X768.png" platform="ios" width="1024" height="768" />

    <!-- Retina iPad -->
    <splash src="www/res/splash/splash-screen-1536X2048.png" platform="ios" width="1536" height="2048" />
    <splash src="www/res/splash/splash-screen-2048X1536.png" platform="ios" width="2048" height="1536" />
   
    

    <content src="index.html" />
	
    <feature name="File">
        <param name="android-package" value="org.apache.cordova.file.FileUtils" />
    </feature>
    <plugin name="cordova-plugin-device" source="npm" />
    <plugin name="cordova-plugin-geolocation" source="npm" />
    <plugin name="cordova-plugin-network-information" source="npm"  />
    <plugin name="cordova-plugin-whitelist" source="npm"/>
    <plugin name="cordova-plugin-inappbrowser" source="npm"/>
	<plugin name="uk.co.workingedge.phonegap.plugin.launchnavigator" source="npm" />
  
    <preference name="android-build-tool" value="gradle" />
	<plugin name="phonegap-plugin-push" spec="~1.4.5" source="npm">
		<param name="SENDER_ID" value="684191859302" />
    </plugin>
	
    <preference name="orientation" value="portrait" />

    <preference name="android-build-tool" value="gradle" />

    <preference name="permissions" value="none"/>
	
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="LoadUrlTimeoutValue" value="50000" />
	<plugin name="org.apache.cordova.splashscreen" source="npm" />




    <access origin="*" />
    <engine name="ios" spec="^4.4.0" />
    <plugin name="cordova-plugin-splashscreen" spec="^4.0.3" />
</widget>
